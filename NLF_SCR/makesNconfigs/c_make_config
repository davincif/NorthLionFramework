


#Build options
build: *.o
	$(CC) -Wl,-R -Wl,./ $(CFLAGS) main.c -o $(OBJ) $(NLFINCLUDES) $(SDL2INCLUDES) $(SDLIMAGE2INCLUDES) $(NLFLIBS)

*.o:
	$(CC) $(CFLAGS) *.c -o *.o $(NLFINCLUDES) $(SDL2INCLUDES) $(SDLIMAGE2INCLUDES) $(NLFLIBS)


#cleaning options
clean:
	rm -f -v $(COMPILEPATH)*.o

clean-all:
	rm -f -v ./*.o ./*.h.gch
	rm -f -v $(COMPILEPATH)*.o main main.exe